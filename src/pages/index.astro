---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import { ContentToRender, ContentVisibility } from 'types'

const contentVisibility = ContentVisibility.visible
const contentToRender = ContentToRender.image

const NUMBER_OF_CARDS = 300
---

<Layout title='Vf Pill | Content-visibility'>
  <main>
    <h1>Welcome to <span class='text-gradient'>Vodafone Pills</span></h1>
    <section class='instructions'>
      To get started, change the variables <code>contentVisibility</code> and <code>contentToRender</code> in <code
        >src/pages/index.astro</code
      >.
      <br />
      <br />

      <strong>Current values:</strong>
      <br />
      <code>contentVisibility: {contentVisibility}</code>
      <br />
      <code>contentToRender: {contentToRender}</code>
      <br />
      <code>Number of elements: {NUMBER_OF_CARDS}</code>
      <br />
    </section>
    <ul role='list' class='card-grid'>
      {
        [...Array(NUMBER_OF_CARDS)].map((_, index) => {
          return <Card contentToRender={contentToRender} contentVisibility={contentVisibility} index={index} />
        })
      }
    </ul>
  </main>
</Layout>

<style>
  main {
    --accent: #820000;
    --accent-opacity: #82000033;
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }

  .text-gradient {
    background-image: linear-gradient(45deg, #820000, #e60000);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100%;
    background-position: 0%;
  }

  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid var(--accent);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }

  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: var(--accent-opacity);
    color: var(--accent);
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }

  .card-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0;
  }
</style>
