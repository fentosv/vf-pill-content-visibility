---
import type { ContentVisibility } from 'types'

export interface Props {
  contentVisibility: ContentVisibility
}

const { contentVisibility } = Astro.props
---

<h1>Welcome to <span class='text-gradient'>Vodafone Pills</span></h1>
<section class='instructions'>
  In this page, <code>content-visibility</code> is <code>{contentVisibility}</code>
</section>

<style>
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }

  .text-gradient {
    background-image: linear-gradient(45deg, #820000, #e60000);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100%;
    background-position: 0%;
  }

  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid var(--accent);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }

  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: var(--accent-opacity);
    color: var(--accent);
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }
</style>
